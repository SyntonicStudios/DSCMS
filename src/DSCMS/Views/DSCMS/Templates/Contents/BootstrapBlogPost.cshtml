@model DSCMS.Models.Content

@{
    Layout = (string) ViewData["Layout"];
}

<div class="col-sm-8 blog-main">

    <div class="blog-post">
        <h2 class="blog-post-title">@Model.ContentItems.Where(ci => ci.ContentTypeItem.Name == "Subject").FirstOrDefault().Value</h2>
        <p class="blog-post-meta">December 14, 2013 by <a href="#">Chris</a></p>

        @Html.Raw(Model.Body)

    </div><!-- /.blog-post -->

    <nav>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>
    </nav>

</div><!-- /.blog-main -->
