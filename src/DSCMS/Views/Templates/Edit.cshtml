@model DSCMS.Models.Template

@{
  ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
  <div class="form-horizontal">
    <h4>Template</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TemplateId" />
    <div class="form-group">
      <label asp-for="FileContents" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="FileContents" class="form-control" />
        <span asp-validation-for="FileContents" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="FileLocation" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="FileLocation" class="form-control" />
        <span asp-validation-for="FileLocation" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="LayoutId" class="control-label col-md-2"></label>
      <div class="col-md-10">
        <select asp-for="LayoutId" class="form-control" asp-items="ViewBag.LayoutId"></select>
        <span asp-validation-for="LayoutId" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="Name" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <label asp-for="IsForContentType" class="col-md-2 control-label"></label>
      <div class="col-md-10">
        <input asp-for="IsForContentType" class="form-control" />
        <span asp-validation-for="IsForContentType" class="text-danger" />
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
      </div>
    </div>
  </div>
</form>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
